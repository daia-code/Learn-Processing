void setup(){
  size(800,900);
}
void draw(){
  background(0);
  pushMatrix();
  Poligon poligon1=new Poligon(300,400,250,7);
  poligon1.drawPoli();
  popMatrix();
}
class Poligon{
  private int centerX;
  private int centerY;
  private int raza;
  private int laturi;
  public Poligon( int centerX,int centerY,int raza,int laturi){
    this.centerX=centerX;
     this.centerY=centerY;
     this.raza=raza;
     this.laturi=laturi;
  }
  void drawPoli(){
  
  noFill();
  float unghi=TWO_PI/laturi;
  beginShape();
  for(float i=0;i< TWO_PI;i=i+unghi){
    stroke(255);
    float pX=centerX+cos(i)* raza;
    float pY=centerY+sin(i)*raza;
    
    vertex(pX,pY);
  }
  endShape();
  
}
}
